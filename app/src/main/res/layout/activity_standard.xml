<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".chemistry_standard">

    <Button
        android:id="@+id/standard11_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_11"
        android:textSize="24sp"
        app:backgroundTint="#2F2828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/standard12_button"
        app:layout_constraintVertical_bias="0.125" />

    <Button
        android:id="@+id/standard12_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/class_12"
        android:textSize="24sp"
        app:backgroundTint="#2F2828"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.391" />

</androidx.constraintlayout.widget.ConstraintLayout>